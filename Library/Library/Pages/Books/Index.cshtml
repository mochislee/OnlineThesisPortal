    <h4>All Books Available </h4>
    <br />

    <table class="table table-borderless">
        <tbody class="m-10">
            @foreach (var item in Model.ThesisEntity)
            {

                <tr class="border-bottom ">
                    <th> <a asp-page="./Details" asp-route-id="@item.Id" style="color:darkblue">@Html.DisplayFor(modelItem => item.thesisTitle)</a> </th>
                    <td style="color: darkred">
                        <a href="C:\Users\kriselle\source\repos\Library\Library\wwwroot\pdf\DonJuan.pdf">[View]</a>
                    </td>
                </tr>
                <tr class="border-bottom ">
                    <td>@Html.DisplayFor(modelItem => item.thesisDescription)</td>
                </tr>
                <tr>
                <tr class="  mb-10">
                    <td>@Html.DisplayFor(modelItem => item.thesisAuthor) | @Html.DisplayFor(modelItem => item.yearPublished)</td>
                    <td><b>Course: </b>@Html.DisplayFor(modelItem => item.thesisCourse)</td>
                </tr>
                

                </tr>
            }
        </tbody>
    </table>
    <br />
</div>

