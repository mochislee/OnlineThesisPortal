@model Library.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="p-3" >
    <div class="text-center m-5">
        <h2 class="display-4">Discover</h2>
        <hr class=" m-4" />

        <form asp-page="./Index" method="get">

            <div class="form-actions no-color">
                <div class="input-group  mx-auto w-75 input-group-lg  ">
                    <input type="text" name="searchString" class="form-control" placeholder="I am looking for.." aria-label="Recipient's username" aria-describedby="button-addon2" />
